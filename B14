// Updated Automatic Search Logic - Strict Isolation
useEffect(() => {
    let filtered = [...mockRows];

    // 1. Particular Date: STRICTLY ONLY apply date1 filter here
    if (activeTab === 'particular') {
        if (date1) {
            filtered = filtered.filter(r => r.REPORT_DATE === date1);
        }
    } 
    
    // 2. Search Range: IGNORE etlDate unless BOTH start (date1) and end (date2) are intentionally picked
    else if (activeTab === 'range') {
        if (date1 && date2) {
            filtered = filtered.filter(r => r.REPORT_DATE >= date1 && r.REPORT_DATE <= date2);
        } else {
            // Show all data if range is incomplete, ignoring the default etlDate
            filtered = [...mockRows]; 
        }
    } 
    
    // 3. Current Difference: COMPLETELY IGNORE date1 (etlDate)
    else if (activeTab === 'current') {
        if (glcc) {
            const search = glcc.toLowerCase();
            filtered = filtered.filter(r => 
                `${r.BRANCH_CODE}${r.CURRENCY}${r.CGL}`.toLowerCase().includes(search)
            );
        } else {
            // No GLCC entered? Show all records without any date restriction
            filtered = [...mockRows]; 
        }
    }

    setRows(filtered);
}, [glcc, date1, date2, activeTab]);
