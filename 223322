import React, { useState, useMemo, useEffect, useCallback } from 'react';
import useApi from "../../hooks/useApi";
import { DataGrid, gridClasses } from '@mui/x-data-grid';
import {
    Box, Paper, Stack, Button, TextField, Divider,
    Dialog, DialogTitle, DialogContent, IconButton, Grid, Collapse, CircularProgress, Typography
} from '@mui/material';
import * as DownloadUtils from '../../utils/DownloadUtils'; 
import FileDownloadIcon from '@mui/icons-material/FileDownload';
import HistoryIcon from '@mui/icons-material/History';
import RestartAltIcon from '@mui/icons-material/RestartAlt';

export default function BalanceCompareDifferenceScreen() {
    const [activeTab, setActiveTab] = useState('current');
    const [rows, setRows] = useState([]);
    const [loading, setLoading] = useState(false);
    const [glcc, setGlcc] = useState('');
    const [date1, setDate1] = useState('');
    const [date2, setDate2] = useState('');
    const [systemEtlDate, setSystemEtlDate] = useState('');
    const [openPopup, setOpenPopup] = useState(false);
    const [selectedRow, setSelectedRow] = useState(null);
    const { callApi } = useApi();

    // 1. Initial ETL Date fetch karne
    useEffect(() => {
        const getInitialDate = async () => {
            try {
                const res = await callApi('/PS/fincore-date', {}, "GET");
                if (res?.data?.success) {
                    const etlDate = res.data.data.etlDate;
                    setSystemEtlDate(etlDate);
                    // Jar land hotana particular tab asel tar date1 set kara
                    if (activeTab === 'particular') setDate1(etlDate);
                }
            } catch (err) {
                console.error("Initial Date Load Failed", err);
            }
        };
        getInitialDate();
    }, [callApi]);

    // 2. API Fetch Function (Data mapping logic sobat)
    const fetchDifferences = useCallback(async () => {
        // Validation: current sathi date garjechi nahi, pan particular/range sathi lagte
        if (activeTab !== 'current' && !date1) return;

        setLoading(true);
        try {
            const response = await callApi('/RS/differences', {
                params: { 
                    page: 0, 
                    size: 100, 
                    reportDate: date1, 
                    endDate: date2, 
                    glccFilter: glcc 
                }
            }, "GET");

            // JSON path: response.data.content
            const content = response?.data?.content || response?.data || [];
            
            if (Array.isArray(content)) {
                const mappedRows = content.map((item, index) => ({
                    ...item,
                    id: item.id || `row-${index}`, 
                    ERROR_DATE: '', // Empty column start la
                    REPORT_DATE: item.reconRunDate || '-',
                    // branchcode + currency + cgl (eksalag)
                    GLCC_VAL: `${item.branchCode || ''}${item.currency || ''}${item.cgl || ''}`,
                    CBS_BALANCE: item.cbsBalance ?? 0,
                    GL_BALANCE: item.glBalance ?? 0,
                    DIFFERENCE_AMOUNT: item.differenceAmount ?? 0,
                    DIFF_YESTERDAY: item.diffBwYesterday ?? 0,
                    TYPE_VAL: item.type || '-',
                    HEAD_VAL: item.head || '-'
                }));
                setRows(mappedRows);
            } else {
                setRows([]);
            }
        } catch (err) {
            console.error("Fetch Error:", err);
            setRows([]);
        } finally {
            setLoading(false);
        }
    }, [date1, date2, glcc, activeTab, callApi]);

    useEffect(() => {
        fetchDifferences();
    }, [fetchDifferences]);

    // 3. Conditional Columns (Particular asel tarach Action disel)
    const columns = useMemo(() => {
        const baseColumns = [
            { field: 'ERROR_DATE', headerName: 'Error Date', flex: 1 },
            { field: 'REPORT_DATE', headerName: 'Report Date', flex: 1 },
            { field: 'GLCC_VAL', headerName: 'GLCC', flex: 1.5 },
            { field: 'CBS_BALANCE', headerName: 'CBS Balance', flex: 1, align: 'right' },
            { field: 'GL_BALANCE', headerName: 'GL Balance', flex: 1, align: 'right' },
            { 
                field: 'DIFFERENCE_AMOUNT', 
                headerName: 'Difference', 
                flex: 1, 
                renderCell: (params) => (
                    <Typography color="error" fontWeight="bold">{params.value}</Typography>
                )
            },
            { field: 'DIFF_YESTERDAY', headerName: 'Diff Yesterday', flex: 1 },
            { field: 'TYPE_VAL', headerName: 'Type', flex: 1 },
            { field: 'HEAD_VAL', headerName: 'Head', flex: 1 },
        ];

        if (activeTab === 'particular') {
            baseColumns.push({
                field: 'actions',
                headerName: 'Action',
                width: 80,
                renderCell: (params) => (
                    <IconButton color="primary" onClick={() => { setSelectedRow(params.row); setOpenPopup(true); }}>
                        <HistoryIcon />
                    </IconButton>
                )
            });
        }
        return baseColumns;
    }, [activeTab]);

    return (
        <Box sx={{ p: 3, bgcolor: '#f4f7f9', minHeight: '100vh' }}>
            <Typography variant="h5" sx={{ mb: 3, fontWeight: 700 }}>Balance Compare Difference</Typography>

            {/* TABS SECTION */}
            <Stack direction="row" spacing={2} sx={{ mb: 3 }}>
                {['particular', 'current', 'range'].map((tab) => (
                    <Button
                        key={tab}
                        variant={activeTab === tab ? "contained" : "outlined"}
                        onClick={() => {
                            setActiveTab(tab);
                            setGlcc('');
                            setDate2('');
                            if (tab === 'particular') setDate1(systemEtlDate);
                            else setDate1('');
                        }}
                        sx={{ flex: 1, py: 1.5, borderRadius: '8px', fontWeight: 600 }}
                    >
                        {tab.toUpperCase()} DATE
                    </Button>
                ))}
            </Stack>

            {/* SEARCH FILTERS SECTION */}
            <Collapse in={activeTab !== null}>
                <Paper elevation={0} sx={{ p: 3, mb: 3, borderRadius: '12px', border: '1px solid #e0e4e8' }}>
                    
                    {activeTab === 'particular' && (
                        <Stack direction="row" spacing={2} alignItems="center">
                            <TextField
                                type="date" label="Report Date" size="small"
                                InputLabelProps={{ shrink: true }}
                                value={date1} onChange={(e) => setDate1(e.target.value)}
                                sx={{ width: 220 }}
                            />
                            <Button variant="outlined" color="error" startIcon={<RestartAltIcon />} onClick={() => setDate1(systemEtlDate)}>Reset</Button>
                            <Button variant="contained" startIcon={<FileDownloadIcon />} onClick={() => DownloadUtils?.downloadFile?.(JSON.stringify(rows))}>Download Excel</Button>
                        </Stack>
                    )}

                    {activeTab === 'current' && (
                        <Stack direction="row" spacing={2} alignItems="center">
                            <TextField
                                label="GLCC Filter" size="small"
                                value={glcc} onChange={(e) => setGlcc(e.target.value)}
                                sx={{ width: 300 }}
                            />
                            <TextField
                                type="date" label="Date" size="small" disabled
                                InputLabelProps={{ shrink: true }}
                                value={systemEtlDate} sx={{ width: 200, bgcolor: '#f5f5f5' }}
                            />
                            <Button variant="outlined" color="error" startIcon={<RestartAltIcon />} onClick={() => setGlcc('')}>Reset</Button>
                            <Button variant="contained" startIcon={<FileDownloadIcon />} onClick={() => DownloadUtils?.downloadFile?.(JSON.stringify(rows))}>Download</Button>
                        </Stack>
                    )}

                    {activeTab === 'range' && (
                        <Stack spacing={2}>
                            <Stack direction="row" spacing={2} alignItems="center">
                                <TextField
                                    type="date" label="Start Date" size="small"
                                    InputLabelProps={{ shrink: true }}
                                    value={date1} onChange={(e) => setDate1(e.target.value)}
                                    sx={{ width: 200 }}
                                />
                                <TextField
                                    type="date" label="End Date" size="small"
                                    InputLabelProps={{ shrink: true }}
                                    value={date2} onChange={(e) => setDate2(e.target.value)}
                                    sx={{ width: 200 }}
                                />
                                <Button variant="contained" color="primary" onClick={fetchDifferences}>Power</Button>
                                <Button variant="outlined" color="error" startIcon={<RestartAltIcon />} onClick={() => { setDate1(''); setDate2(''); setGlcc(''); }}>Reset</Button>
                            </Stack>
                            <TextField
                                label="GLCC Filter" fullWidth size="small"
                                value={glcc} onChange={(e) => setGlcc(e.target.value)}
                            />
                        </Stack>
                    )}
                </Paper>
            </Collapse>

            {/* TABLE SECTION */}
            <Paper elevation={0} sx={{ borderRadius: '12px', border: '1px solid #e0e4e8', overflow: 'hidden', position: 'relative' }}>
                {loading && (
                    <Box sx={{ position: 'absolute', top: 0, left: 0, right: 0, bottom: 0, display: 'flex', alignItems: 'center', justifyContent: 'center', bgcolor: 'rgba(255,255,255,0.7)', zIndex: 10 }}>
                        <CircularProgress />
                    </Box>
                )}
                <Box sx={{ height: 600, width: '100%' }}>
                    <DataGrid
                        rows={rows}
                        columns={columns}
                        pageSizeOptions={[10, 25, 50]}
                        initialState={{ pagination: { paginationModel: { pageSize: 10 } } }}
                        sx={{ border: 0, [`& .${gridClasses.columnHeader}`]: { bgcolor: '#f1f5f9', fontWeight: 600 } }}
                    />
                </Box>
            </Paper>
        </Box>
    );
}
